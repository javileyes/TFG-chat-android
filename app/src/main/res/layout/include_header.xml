<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="42dp">

    <FrameLayout
        android:id="@+id/leftIconsFrameLayout"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/backIconView"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:materialIcon="arrow_left"
            app:materialIconColor="#fff"
            app:materialIconSize="28dp"
            android:scaleType="center"/>
        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/sideMenuIconView"
            android:layout_marginStart="5dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:materialIcon="menu"
            app:materialIconColor="#fff"
            app:materialIconSize="28dp"
            android:scaleType="center"/>
    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardView"
        android:layout_toEndOf="@+id/leftIconsFrameLayout"
        android:layout_centerVertical="true"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:elevation="12dp"
        app:cardCornerRadius="17dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/iconView"
            android:background="@color/blue"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:materialIcon="leaf"
            app:materialIconColor="@color/white"
            app:materialIconSize="24dp"
            android:scaleType="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleTextView"
        android:text="Chat"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <net.steamcrafted.materialiconlib.MaterialIconView
        android:id="@+id/searchIconView"
        android:visibility="gone"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:materialIcon="magnify"
        app:materialIconColor="#fff"
        app:materialIconSize="28dp"
        android:scaleType="center"/>

</RelativeLayout>