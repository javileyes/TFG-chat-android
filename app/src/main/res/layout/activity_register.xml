<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/blueLighter"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:background="@color/orange"
        android:layout_marginBottom="-600dp"
        android:rotation="45"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_above="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Chat"
            android:textColor="@color/blue"
            android:textSize="42sp"
            android:fontFamily="sans-serif-condensed"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:materialIcon="comment_text"
            app:materialIconColor="@color/blue"
            app:materialIconSize="120dp"
            android:scaleType="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        android:background="@color/blue"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Registro"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_gravity="center_vertical"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                app:materialIcon="account"
                app:materialIconColor="@color/blue"
                app:materialIconSize="28dp"
                android:scaleType="center"/>
            <EditText
                android:id="@+id/usernameEditText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:hint="USUARIO"
                android:maxLines="1"
                android:inputType="text"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textColorHint="@color/blueLight"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/blue"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_gravity="center_vertical"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                app:materialIcon="lock"
                app:materialIconColor="@color/blue"
                app:materialIconSize="28dp"
                android:scaleType="center"/>
            <EditText
                android:id="@+id/passwordEditText"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:hint="CONTRASEÃ‘A"
                android:maxLines="1"
                android:inputType="textPassword"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textColorHint="@color/blueLight"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/blue"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <Button
            android:id="@+id/enterButton"
            android:text="REGISTRARSE"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:background="@color/orange"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"/>

        <Button
            android:id="@+id/backButton"
            android:text="VOLVER"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"/>

    </LinearLayout>




</RelativeLayout>